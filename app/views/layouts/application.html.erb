<!DOCTYPE html>
<html>
<head>
  <title><%= ENV['APP_TITLE'] %></title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app='Dashboard'>
  <header>
    <span class="logo" style="margin-top:16px;display:inline-block">Dashboard</span>
  </header>

  <div class='container' style="margin-top:100px;">
    <alert-message alerts='alertMessages.alerts'></alert-message>
    <% if flash[:notice] %>
      <div class='alert alert-success' role='alert' hide-after='5000'>
        <div class='container'><%= flash[:notice] %></div>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class='alert alert-danger' role='alert' hide-after='10000'>
        <div class='container'><%= flash[:alert] %></div>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
